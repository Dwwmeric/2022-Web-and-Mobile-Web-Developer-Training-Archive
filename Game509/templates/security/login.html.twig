{% extends 'base.html.twig' %}

{% block title %}TheGame509{% endblock %}

{% block body %}

   
    <div class="container">
        <img src="{{ asset ('asset/image/logoAccueil.png') }}" alt="logo" class="logo">
            <h2 id="mainTitleLogin">ðŸŽ® {% trans %}The game of STUDIO509{% endtrans %} ðŸŽ²</h2> 
                <div class="form-control center">
                    <h1>{% trans %}Connection{% endtrans %}</h1>
                            {% if app.user %}
                                <div class="center">
                                    {% trans %}You are connected{% endtrans %},<a href="{{ path('home_listing') }}" class="btn btn-link">{% trans %}Home{% endtrans %}</a> <a href="{{ path('logout') }}" class="btn btn-link">{% trans %}Logout{% endtrans %}</a>
