                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br>
                                            <label for="inputPassword">Password: </label>
                                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br>
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                                {% for flash_message in app.session.flashbag.get('error') %}
                                                        <div class="alert alert-danger center">{% trans %} Incorrect username or password{% endtrans %}</div>
                                                {% endfor %}
                                            <label><input type="checkbox" name="_remember_me">{% trans %}Remember me{% endtrans %} </label><br>
                                             <a href="{{ path('app_forgot_password_request') }}" class="btn btn btn-success">{% trans %}ResetPassword{% endtrans %}</a> 
                                        <button class="btn btn btn-success" type="submit">{% trans %}To validate{% endtrans %}</button>
                                </form>

                   
                </div>
    </div>
                   
     
{% endblock %}
